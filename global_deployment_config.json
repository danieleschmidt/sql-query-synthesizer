{
  "global_deployment": {
    "regions": [
      {
        "name": "us-east-1",
        "primary": true,
        "location": "N. Virginia"
      },
      {
        "name": "eu-west-1",
        "primary": false,
        "location": "Ireland"
      },
      {
        "name": "ap-southeast-1",
        "primary": false,
        "location": "Singapore"
      },
      {
        "name": "ap-northeast-1",
        "primary": false,
        "location": "Tokyo"
      }
    ],
    "auto_scaling": {
      "min_instances": 2,
      "max_instances": 100,
      "target_cpu": 70,
      "scale_up_cooldown": 300,
      "scale_down_cooldown": 600
    },
    "load_balancing": {
      "algorithm": "least_connections",
      "health_check_interval": 30,
      "failover_threshold": 3
    }
  },
  "i18n_configuration": {
    "supported_languages": [
      "en",
      "es",
      "fr",
      "de",
      "ja",
      "zh"
    ],
    "default_language": "en",
    "auto_detect": true,
    "fallback_strategy": "cascade"
  },
  "compliance": {
    "gdpr": {
      "enabled": true,
      "data_retention_days": 1095,
      "consent_required": true,
      "right_to_deletion": true
    },
    "ccpa": {
      "enabled": true,
      "opt_out_available": true,
      "data_sale_prohibited": true
    },
    "pdpa": {
      "enabled": true,
      "singapore_compliance": true,
      "notification_required": true
    }
  },
  "security": {
    "encryption_at_rest": true,
    "encryption_in_transit": true,
    "tls_version": "1.3",
    "certificate_auto_renewal": true,
    "waf_enabled": true,
    "ddos_protection": true
  },
  "monitoring": {
    "metrics_collection": true,
    "log_aggregation": true,
    "alerting_enabled": true,
    "performance_monitoring": true,
    "uptime_target": 99.99
  }
}